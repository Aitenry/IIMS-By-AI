<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.toryu.dms.archive.mapper.ArchiveTypeMapper">

    <select id="getArchiveTypesByIds" parameterType="list" resultType="com.toryu.dms.archive.model.entity.ArchiveType">
        SELECT
        id,
        name,
        operate_component,
        detail_component,
        code,
        create_by,
        create_time,
        update_by,
        update_time
        FROM iims_archive_type
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

</mapper>